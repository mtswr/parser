<% content_for :title, "Email Logs" %>

<div class="row">
  <div class="col-12">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1>Email Processing Logs</h1>
      <%= link_to "Upload New Email", new_email_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>

<div class="row mb-4">
  <div class="col-12">
    <div class="card">
      <div class="card-body">
        <%= form_with url: email_logs_path, method: :get, local: true, class: "row g-3" do |form| %>
          <div class="col-md-3">
            <%= form.label :source, "Filter by Source", class: "form-label" %>
            <%= form.select :source, options_for_select([["All Sources", ""]] + @sources.map { |s| [s, s] }, params[:source]), {}, { class: "form-select" } %>
          </div>
          <div class="col-md-3">
            <%= form.label :status, "Filter by Status", class: "form-label" %>
            <%= form.select :status, options_for_select([["All Statuses", ""]] + @statuses.map { |s| [s.titleize, s] }, params[:status]), {}, { class: "form-select" } %>
          </div>
          <div class="col-md-3 d-flex align-items-end">
            <%= form.submit "Filter", class: "btn btn-outline-primary me-2" %>
            <%= link_to "Clear", email_logs_path, class: "btn btn-outline-secondary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="row mb-4">
  <div class="col-12">
    <div class="row">
      <div class="col-md-3">
        <div class="card text-white bg-primary">
          <div class="card-body text-center">
            <h5 class="card-title">Total</h5>
            <h3><%= @stats[:total] %></h3>
          </div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card text-white bg-success">
          <div class="card-body text-center">
            <h5 class="card-title">Successful</h5>
            <h3><%= @stats[:successful] %></h3>
          </div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card text-white bg-danger">
          <div class="card-body text-center">
            <h5 class="card-title">Failed</h5>
            <h3><%= @stats[:failed] %></h3>
          </div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card text-white bg-warning">
          <div class="card-body text-center">
            <h5 class="card-title">Processing</h5>
            <h3><%= @stats[:processing] %></h3>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-12">
    <div class="card">
      <div class="card-header">
        <h5 class="card-title mb-0">
          Email Logs 
          <span class="badge bg-secondary"><%= @email_logs.count %> total</span>
        </h5>
      </div>
      <div class="card-body">
        <% if @email_logs.any? %>
          <div class="table-responsive">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>Filename</th>
                  <th>Source</th>
                  <th>Status</th>
                  <th>Customer</th>
                  <th>Processed</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% @email_logs.each do |log| %>
                  <tr>
                    <td><%= log.filename %></td>
                    <td><span class="badge bg-primary"><%= log.source %></span></td>
                    <td>
                      <span class="badge bg-<%= log.success? ? 'success' : log.failed? ? 'danger' : 'warning' %>">
                        <%= log.status.titleize %>
                      </span>
                    </td>
                    <td>
                      <% if log.customer_id.present? %>
                        <%= link_to "View Customer", customer_path(log.customer_id), class: "btn btn-sm btn-outline-primary" %>
                      <% else %>
                        <span class="text-muted">-</span>
                      <% end %>
                    </td>
                    <td><%= time_ago_in_words(log.created_at) %> ago</td>
                    <td>
                      <%= link_to "View Details", email_log_path(log), class: "btn btn-sm btn-outline-secondary" %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% else %>
          <div class="text-center py-5">
            <h5 class="text-muted">No email logs found</h5>
            <p class="text-muted">Upload some email files to start processing.</p>
            <%= link_to "Upload Email", new_email_path, class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
